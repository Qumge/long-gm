<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="" class="img-circle" alt="User Image">
        <canvas class='canvas' style="display:none" first_name="<%= current_user.name.present? ? current_user.name[0].upcase : 'D' %>"></canvas>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="javascript:void(0);"><%= current_user.role&.name %></a>
      </div>
    </div>
    <!-- search form -->
    <!-- /.search form -->
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header"><i class="fa fa-dashboard"></i><span>控制台</span></li>
      <% if can? :index, :products %>
      <li class="<%= active_class params, 'products' %>">
        <%= link_to products_path do %>
          <i class="fa fa-leaf"></i> <span>产品</span>
        <% end %>
      </li>
      <%end %>

      <% if current_user.has_role? 'super_admin' %>
      <li>
        <%= link_to rails_admin_path do %>
          <i class="fa fa-gear"></i> <span>后台管理</span>
        <% end %>
      </li>
      <%end %>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>