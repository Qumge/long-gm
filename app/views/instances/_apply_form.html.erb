<div id="form">
  <div class="modal-header" style="padding:5px; padding-left: 15px;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="file-modal-label"></h4>
  </div>
  <%= simple_form_for(@log, url: do_apply_instance_path(@log), html: {class: 'form-horizontal group_form', onkeydown: "if(event.keyCode==13)return false;"}, wrapper: :horizontal_form) do |f| %>
    <div class="modal-body" >
      <%= f.input :develop_id, collection: current_user.audit_users(:develop, :instances).all.collect{|user| [user.name, user.id]}, input_html: { class: 'select2', width: '100%', style: 'width: 100%'} %>
      <%= f.input :flow_id, collection: current_user.audit_users(:flow, :instances).all.collect{|user| [user.name, user.id]} , input_html: { class: 'select2', width: '100%', style: 'width: 100%'}%>
      <%= f.input :active_id, collection: current_user.audit_users(:active, :instances).all.collect{|user| [user.name, user.id]} , input_html: { class: 'select2', width: '100%', style: 'width: 100%'}%>
    </div>
  <% end %>

  <div class="modal-footer">
    <%= button_tag '保存', class: 'btn btn-primary commit commit', data: { disable_with: '保存中' } %>
    <button type="button" class="btn btn-default" data-dismiss="modal">返回</button>
  </div>
</div>
<script tye="text/javascript">
    //ajax提交表单
    $(function(){
        $('.commit').click(function(){
            showSpinner();
            $.ajax({
                type: "Patch",
                url: $('.group_form').attr('action'),
                data: $('.group_form').serialize(),
                dataType: 'script',
                async: false,
                error: function(request) {
                    alert("Connection error");
                },
                success: function(data) {
                    //接收后台返回的结果
                }
            });

        });
        $('.select2').select2();
    });
</script>


