<div class="row" id="product-list">
  <div class="col-md-12">
    <div class="box">
      <%= form_tag instances_path, method: :get do%>
      <div class="box-header with-border">
        <h3 class="box-title">零件列表</h3>
        <% if can? :new, :instances %>
          <small><%= link_to '添加零件', new_instance_path , class: 'font-a label bg-green', 'data-toggle' => "modal", 'data-target' => "#global-modal" %></small>
        <% end %>
      </div>
      <div class="box-tools">
        <div class="input-group input-group-sm">
          <div class="pull-right">
            <div class="col-xs-12">
              <input type="text" name="table_search" class="form-control" placeholder="检索" value="<%= params[:table_search] %>">
            </div>
          </div>

          <div class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
          </div>
        </div>
      </div>


      <% end %>
      <!-- /.box-header -->
      <div class="box-body">
        <table class="table table-bordered">
          <tr>
            <th>零件编号</th>
            <th>零件名</th>
            <th>零件型号</th>
            <th>创建人</th>
            <th></th>
          </tr>
          <tr>
            <% if instances.present? %>
              <% instances.each do |instance| %>
              <tr>
                <td>
                  <% if can? :show, :instances %>
                  <%= link_to instance.instance_no, instance_path(instance) %></td>
                    <% else %>
                  <%=instance.instance_no %>
                    <% end %>
                <td><%= instance.name %></td>
                <td><%= instance.norms %></td>
                <td><%= instance.user&.name %></td>
                <td>

                  <% if can? :edit, :instances %>
                    <%= link_to  edit_instance_path(instance), class: 'btn btn-success btn-xs', 'data-toggle' => "modal", 'data-target' => "#global-modal" do %>
                      <i class="fa fa-edit"></i>编辑
                    <% end %>
                  <% end %>
                  <% if can? :destroy, :instances %>
                    <%= link_to instance_path(instance), method: :delete, data: {confirm: '确定删除吗？'}, class: 'btn btn-danger btn-xs' do %>
                                        <i class="fa fa-close"></i>删除
                    <% end %>
                  <% end %>
                  <% if can? :cytoscape, :home %>
                    <%= link_to cytoscape_home_index_path(instance_id: instance.id),  class: 'btn btn-primary btn-xs', target: "view_window" do %>
                      <i class="fa fa-gg"></i>关系图
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" align="center">没有可显示的内容</td>
            </tr>
          <% end %>
          </tr>

        </table>
      </div>
      <!-- /.box-body -->
      <div class="box-footer clearfix">
        <div class="pull-right pagination-sm no-margin">
          <%= paginate instances, params: {table_search: params[:table_search]} %>
        </div>
      </div>
    </div>
    <!-- /.box -->
  </div>
</div>