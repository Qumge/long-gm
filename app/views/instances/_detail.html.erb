<div class="row">
  <div class="table-responsive col-sm-6">
    <table class="table">
      <tbody>
      <tr>
        <th style="width:50%">产品编号</th>
        <td><%= @instance.instance_no %></td>
      </tr>
      <tr>
        <th>产品名</th>
        <td><%= @instance.name %></td>
      </tr>
      <tr>
        <th>规格</th>
        <td><%= @instance.norms %></td>
      </tr>
      <tr>
        <th>备注</th>
        <td><%= @instance.desc %></td>
      </tr>
      <tr>
        <th>
          图纸
        </th>
        <td>
          <% if @instance.file_path.present? && current_user.instances.include?(@instance)%>
            <a href="javascript:void(0)" onclick="show_file(this)" class="btn show-file" data-url="<%= @instance.preview_url%>" data-file-name="<%= @instance.file_name %>">
              <i class="fa fa-eye"></i><%= show_file_name '图纸文件',  @instance %>
            </a>
            <%= link_to @instance.preview_url, class: 'btn' do  %>
              <i class="fa fa-download"></i>
            <% end %>
          <% else %>
            <%= @instance.file_name %>
          <% end %>
        </td>
      </tr>

      </tbody>
    </table>
  </div>
  <div class="table-responsive col-sm-6">
    <table class="table">
      <tbody>
      <tr>
        <th>创建人</th>
        <td><%= @instance&.user&.name %></td>
      </tr>
      <tr>
        <th>创建时间</th>
        <td><%= simple_time @instance.created_at %></td>
      </tr>
      <tr>
        <th>图纸变更人</th>
        <td><%= @instance&.last_user&.name %></td>
      </tr>
      <tr>
        <th>图纸变更时间</th>
        <td><%= simple_time @instance.last_updated_at %></td>
      </tr>
      <tr>
        <th>图纸可见人员</th>
        <td>
          <% @instance.users.each do |user| %>
            <span class="label label-primary " style="padding-bottom: 2px;padding-top: 2px;"><%= user.name %></span>
          <% end %>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>